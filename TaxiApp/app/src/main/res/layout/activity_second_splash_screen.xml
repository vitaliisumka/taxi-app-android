<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundActivity"
    tools:context=".splashScreens.SecondSplashScreenActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageWay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/way_3"
                tools:ignore="MissingConstraints" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundActivity"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/colorBackgroundActivity"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageWay"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="-67dp"
                    android:text="GoGo"
                    android:textColor="@color/colorGoGoText"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="143dp"
                    android:layout_height="63dp"
                    android:layout_marginLeft="67dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@drawable/new_size_car" />

            </LinearLayout>


            <TextView
                android:id="@+id/textDescription"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_below="@id/imageWay"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:text="Water taxis are available in Venice
                             The average travel time is about 10 minutes
                    and you have to pay about â‚¬ 15."
                android:textColor="@color/colorWhiteGrey"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/imageWay"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Loading..."
                android:textColor="@color/colorWhiteGrey"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>